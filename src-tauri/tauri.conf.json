{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Echoir",
  "version": "0.1.1",
  "identifier": "fr.echoir.desktop",
  "build": {
    "frontendDist": "../.output/public",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:6812"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "center": true,
        "title": "Echoir",
        "width": 1440,
        "height": 755,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Echoir"
  }
}
